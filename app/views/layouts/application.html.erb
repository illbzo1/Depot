<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %> 
  </div>
  <div id="columns">
    <div id="side">
      <div id="side_info">
      <%= Time.now.to_s(:simple_date) %><br >
      <%= 'Visited ' + @counter.to_s + ' times.' if @counter %>
      </div>
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id=> "cart") do %>
          <%= render @cart %>
          <% end %>
        <% end %>
      <div id="menu">
      <%= link_to 'Home', store_path %><br />
      <%= link_to 'Questions', store_path %><br />      
      <%= link_to 'News', store_path %><br />
      <%= link_to 'Contact', store_path %><br />
      </div>
    </div>
    <div id="main">
      <%= yield %>
    <div>
  </div>
</body>
</html>